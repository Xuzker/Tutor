@model IEnumerable<Tutor.Models.User>

<div class="min-h-screen bg-gray-100 py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-4xl">
        <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-8">Список пользователей</h2>

        <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ФИО</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@user.FullName</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@user.Email</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <!-- Блокировка пользователя -->
                                <form asp-action="BlockUser" method="post" class="inline">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="inline-block bg-yellow-600 text-white py-2 px-4 rounded-md hover:bg-yellow-700 transition">Заблокировать</button>
                                </form>

                                <!-- Разблокировка пользователя -->
                                <form asp-action="UnblockUser" method="post" class="inline ml-2">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="inline-block bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition">Разблокировать</button>
                                </form>

                                <!-- Удаление пользователя -->
                                <form asp-action="DeleteUser" method="post" class="inline ml-2">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="inline-block bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition">Удалить</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
