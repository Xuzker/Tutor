@model ICollection<Tutor.Models.Course>
@{
    ViewData["Title"] = "Главная";
    var isAuthenticated = User.Identity.IsAuthenticated;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />


<div class="container text-center">
    <h1 class="mb-4">Добро пожаловать в Tutor</h1>
    <p class="lead">Запишитесь на курс и начните изучение программирования уже сегодня!</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="enroll-form p-4 rounded">
                <form method="post" action="/Courses/Enroll">
                    <div class="mb-3">
                        <label for="name" class="form-label">Ваше имя</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="course" class="form-label">Выберите курс</label>                        
                        <select class="form-select" id="course" name="courseId" required>
                            <option value="">Выберите...</option>
                            @foreach (var course in Model)
                            {
                                <option value="@course.Id">@course.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Записаться</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container text-center mt-5">
    <h2 class="mb-4">Популярные курсы</h2>

    <div class="course-carousel">
        <button class="carousel-btn left" onclick="prevCourse()">❮</button>

        <div class="course-track" id="courseTrack">
            @foreach (var course in Model)
            {
                <div class="course-card">
                    <div class="course-content">
                        <h3>@course.Name</h3>
                        <p>
                            @(course.Description.Split('\n')[0].Length > 20
                                ? new string(course.Description.Split('\n')[0].Take(20).ToArray()) + "..."
                                : course.Description.Split('\n')[0])
                        </p>
                        <button class="btn btn-primary">Записаться</button>
                    </div>
                </div>
            }
        </div>

        <button class="carousel-btn right" onclick="nextCourse()">❯</button>
    </div>
</div>

<script src="~/js/Home/Index.js"></script>