@model IEnumerable<Tutor.Models.Notification>

@{
    ViewData["Title"] = "Уведомления";
}

<div class="container">
    <h2 class="mb-4">Уведомления</h2>
    @if (!Model.Any())
    {
        <p>Нет новых уведомлений.</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var notification in Model)
            {
                <li class="list-group-item @(notification.IsRead ? "text-muted" : "fw-bold")">
                    <div class="d-flex justify-content-between">
                        <span>@notification.Message</span>
                        <small>@notification.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                    </div>
                </li>
            }
        </ul>
    }
</div>
