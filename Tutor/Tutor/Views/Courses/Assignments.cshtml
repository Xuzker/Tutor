@model CourseAssignmentsViewModel

@{
    ViewData["Title"] = "Задания курса";
}

<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-4xl">
        <h1 class="text-3xl font-extrabold text-gray-900 text-center mb-6">Задания курса "@Model.CourseName"</h1>

        <div class="bg-white py-8 px-6 shadow sm:rounded-lg sm:px-10">
            @if (Model.Assignments.Any())
            {
                <ul class="space-y-4">
                    @foreach (var assignment in Model.Assignments)
                    {
                        <li class="border p-4 rounded-lg shadow">
                            <h3 class="text-lg font-semibold">@assignment.Title</h3>
                            <p>@assignment.Description</p>
                            <p class="text-sm text-gray-600">Дедлайн: @assignment.Deadline.ToString("dd.MM.yyyy")</p>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-gray-600">Заданий пока нет.</p>
            }
        </div>
    </div>
</div>
