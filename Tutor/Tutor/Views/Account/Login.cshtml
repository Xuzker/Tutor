@model Tutor.Models.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<h2 class="text-center">Вход</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Введите email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Запомнить меня</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Войти</button>

            <div class="text-center mt-3">
                <a asp-action="Register">Нет аккаунта? Зарегистрируйтесь</a>
            </div>
        </form>
    </div>
</div>
